{
  "manifest_version": 3,
  "name": "Dog-Catch",
  "version": "0.1.0",
  "description": "智能媒体资源检测与预览工具 - Chrome 浏览器扩展",
  "author": "Dog-Catch Team",
  
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "webRequest",
    "webNavigation",
    "scripting",
    "alarms",
    "declarativeNetRequest"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "js/background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content-script.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Dog-Catch - 媒体资源检测"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "js/search.js",
        "css/*",
        "icons/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "declarative_net_request": {
    "rule_resources": []
  }
}
